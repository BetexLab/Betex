  var roadMapTitle = ['Idea','R&D','Proof-of-concept','MVP','Beta version launch','Beta version launch','Beta version launch','Beta version launch'],
      roadMapCenter = ['Q4 2016','Q1 2017','Q2 2017','Q3 2017','Q4 2017','Q4 2017','Q4 2017','Q4 2017'],
