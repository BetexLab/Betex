#roadmap.roadmap
  h2.roadmap-title.title-line Roadmap
    span.title-line__line
  .roadmap-slider
    -for(var i = 0; i < 8; i++)
      if(i >= 4)
        .roadmap-slider__item.roadmap-slider__item_light
          .roadmap-slider__item-wrap
            span.roadmap-slider__item-center=roadMapCenter[i]
