        .roadmap-slider__item.roadmap-slider__item_dashed
          .roadmap-slider__item-wrap
            span.roadmap-slider__item-center=roadMapCenter[i]
            p.roadmap-slider__item-title=roadMapTitle[i]
            p.roadmap-slider__item-descript=roadMapDescript[i]
