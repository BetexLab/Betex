section.tokens-distribution
  .tokens-distribution__title-block.accordion-caption.open
    p.tokens-distribution__title-mob Betex tokens distribution
      svg.tokens-distribution__title-mob-icon(width="32px", height="32px")
        use(xmlns:xlink="http://www.w3.org/1999/xlink", xlink:href="#dropdown")

  .row.open
    .col-md-6.col-12.tokens-distribution__chart-wrap
      #donutchart(style="width: 100%;")
    .col-md-6.col-12

      h4.tokens-distribution__title Betex tokens distribution

      ul.tokens-distribution__list
        li(data-doughnut-index="4").tokens-distribution__list-item.blue
          b 50%
          span Tokens sale
        li(data-doughnut-index="3").tokens-distribution__list-item.red
          b 12%
          span Reserve for development and strategic aliances
        li(data-doughnut-index="2").tokens-distribution__list-item.yellow
          b 5%
          span Tokens pre-sale
        li(data-doughnut-index="1").tokens-distribution__list-item.light-blue
          b 3%
          span Bounty campaign
        li(data-doughnut-index="0").tokens-distribution__list-item.grey
          b 30%
          div.locked
            span For founders and team are locked on smart contracts:
            ul.locked__list
              li.locked__list-item 5% for 6 Months
              li.locked__list-item 10% for 1,5 years
              li.locked__list-item 15% 3 years